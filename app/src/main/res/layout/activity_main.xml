<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.fsg_strictlysoccer.MainActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="FSG FOOTBALL CLUB"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:background="#aed6f1"
        android:textColor="#34495e"
        />

    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/fsg1"
        android:scaleType="centerCrop"
        android:paddingTop="16dp"
        android:background="#aed6f1"
        />


    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Address: Plot 17b Road 14, Lekki, Lagos."
        android:textSize="14sp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:textColor="#34495e"
        android:background="#aed6f1"
        />
    
    <TextView
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Contact information: +234-802-304-0432."
        android:textSize="14sp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:background="#aed6f1"
        android:textColor="#34495e"
        />


    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Hours of operation: Tuesdays and Fridays, 9pm-11pm"
        android:textSize="14sp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textColor="#34495e"
        android:background="#aed6f1"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Sign Up"
        />


</LinearLayout>
